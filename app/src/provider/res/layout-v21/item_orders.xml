<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="@dimen/proposal_list_divider_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:translationZ="3dp"
        android:background="@color/colorProposalItem"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="@dimen/proposal_item_height"
            android:layout_height="@dimen/proposal_item_height"
            android:contentDescription="@null"
            android:paddingBottom="9dp"
            android:paddingLeft="9dp"
            android:paddingStart="9dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture"
            android:layout_toStartOf="@+id/btnSkip"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="9dp"
            android:background="@drawable/background_skip"
            android:text="@string/skip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorProposalItem"
        android:focusable="true"
        android:elevation="1dp"
        android:translationZ="3dp"
        android:focusableInTouchMode="true"
        android:paddingBottom="9dp"
        android:paddingLeft="9dp"
        android:paddingStart="9dp"
        android:paddingTop="9dp">

        <EditText
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_edit"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/enter_your_message"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:padding="5dp" />

        <EditText
            android:id="@+id/price"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/background_edit"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="$0"
            android:inputType="numberDecimal"
            android:lines="1"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="9dp"
            android:paddingRight="9dp">

            <Button
                android:id="@+id/btnApply"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/background_apply"
                android:text="@string/apply"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>