<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCardBackground"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@color/colorGrey"
        android:contentDescription="@null"
        android:transitionName="avatar" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/colorInputText"
        android:textSize="@dimen/text_size_18"
        android:transitionName="name" />

    <TextView
        android:id="@+id/location_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address_upper"
        android:textColor="@color/colorInputHint"
        android:textSize="@dimen/text_size_12"
        android:transitionName="location_hint" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Location"
        android:textColor="@color/colorInputText"
        android:textSize="@dimen/text_size_16"
        android:transitionName="location" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorInputHint" />

    <TextView
        android:id="@+id/email_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/email_upper"
        android:textColor="@color/colorInputHint"
        android:textSize="@dimen/text_size_12"
        android:transitionName="email_hint" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:textColor="@color/colorInputText"
        android:textSize="@dimen/text_size_16"
        android:transitionName="email" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorInputHint" />

    <TextView
        android:id="@+id/banking_info_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/banking_info_upper"
        android:textColor="@color/colorInputHint"
        android:textSize="@dimen/text_size_12"
        android:transitionName="banking_info_hint" />

    <TextView
        android:id="@+id/banking_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Bank info"
        android:textColor="@color/colorInputText"
        android:textSize="@dimen/text_size_16"
        android:transitionName="banking_info" />

    <TextView
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_accept_button"
        android:gravity="center"
        android:text="@string/edit"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>